# ===========================================
# E-COMMERCE MICROSERVICES CONFIGURATION
# ===========================================

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL Admin Database
POSTGRES_USER=ecommerce_admin
POSTGRES_PASSWORD=change_this_secure_password_123!
POSTGRES_DB=ecommerce_main

# Individual Service Databases
DB_HOST=postgres
DB_PORT=5432

# Admin Service Database
ADMIN_DB_NAME=admin_db
ADMIN_DB_USER=admin_service
ADMIN_DB_PASSWORD=admin_secure_pass_456!

# Product Service Database
PRODUCT_DB_NAME=product_db
PRODUCT_DB_USER=product_service
PRODUCT_DB_PASSWORD=product_secure_pass_789!

# Order Service Database
ORDER_DB_NAME=order_db
ORDER_DB_USER=order_service
ORDER_DB_PASSWORD=order_secure_pass_012!

# User/Auth Service Database
AUTH_DB_NAME=auth_db
AUTH_DB_USER=auth_service
AUTH_DB_PASSWORD=auth_secure_pass_345!

# ===========================================
# SERVICE PORTS
# ===========================================
ADMIN_PORT=8000
API_PORT=8001
AUTH_PORT=8002
PRODUCT_PORT=8003
ORDER_PORT=8004

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# ===========================================
# REDIS CONFIGURATION (for caching & sessions)
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_pass_678!

# ===========================================
# RABBITMQ CONFIGURATION (for message queue)
# ===========================================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=ecommerce_mq
RABBITMQ_PASSWORD=rabbitmq_secure_pass_901!

# ===========================================
# API GATEWAY
# ===========================================
API_GATEWAY_URL=http://api-gateway:80

# ===========================================
# APPLICATION SETTINGS
# ===========================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ===========================================
# EMAIL CONFIGURATION (for notifications)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@ecommerce.com

# ===========================================
# PAYMENT GATEWAY (Stripe example)
# ===========================================
STRIPE_PUBLIC_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===========================================
# FILE STORAGE (AWS S3 example)
# ===========================================
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=ecommerce-assets

# ===========================================
# MONITORING
# ===========================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=grafana_admin_pass
